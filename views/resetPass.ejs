<header>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="/css/login.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
</header>
<body  style="background-color:black;">
    
    <div class="flex-lg-wrap container-fluid align-self-center p-2 flex-fill bd-highlight"  >
        <h1> RESTABLECER CONTRASEÑA </h1>
        <form class="form-group " style="background-color: blanchedalmond; flex-wrap: inherit;" action="/resetPass" method="post">
            <label class="form-label">USUARIO</label>
            <input class="form-control d-sm-flex" name="userReset" type="text" placeholder="Usuario" aria-label=".form-control-lg example">
            <label class="form-label">NUEVA CONTRASEÑA</label>
            <input class="form-control d-sm-flex" type="text" name="newPass" placeholder="Nueva contraseña" aria-label="default input example">
            <button class="btn btn-primary" type="submit"> Restablecer </button>
        </form>
    </div>
</body>
<% if(typeof  alert != 'undefined'){ %>
    <script>
       Swal.fire({
          title: '<%= alertTitle %>',
          text: '<%= alertMessage %>',
          icon: '<%= alertIcon%>',
          showConfirmButton: '<%= showConfirmButton%>',
          timer: '<%= timer %>'
       }).then(()=>{
          window.location = '/<%= ruta %>'
       })
    </script>
 <% } %>